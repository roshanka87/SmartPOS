<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@android:color/white"
    android:orientation="vertical"
    tools:context="com.example.admin.smartpos.activity_login">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/relative_BacktoHome"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_icons8_go_back_96"
            android:paddingStart="20px"

            android:text=" Back"
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="15dp"
            android:background="@android:color/white"
            android:paddingStart="20px"
            android:text="Back"
            android:textAllCaps="false"
            android:textColor="@android:color/black" />


    </RelativeLayout>


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        tools:context="com.example.admin.pointofsale.activity_main">

        <ImageView
            android:id="@+id/imageView_cash"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_icons8_money_bag_96" />

        <Button
            android:id="@+id/button_CashPayment"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="90dp"
            android:background="@drawable/p_button"
            android:elevation="0dp"
            android:freezesText="false"
            android:paddingStart="20px"
            android:text="Cash Payments"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="20sp" />


    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        tools:context="com.example.admin.pointofsale.activity_main">

        <ImageView
            android:id="@+id/imageViewCard"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_icons8_card_payment_96" />

        <Button
            android:id="@+id/button_CardPayment"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="90dp"
            android:background="@drawable/p_button"
            android:elevation="0dp"
            android:freezesText="false"
            android:paddingStart="20px"
            android:text="Card Payments"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="20sp" />


    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        tools:context="com.example.admin.pointofsale.activity_main">

        <ImageView
            android:id="@+id/imageView_Digital"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_icons8_qr_code_96" />

        <Button
            android:id="@+id/button_DigitlPayment"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="90dp"
            android:background="@drawable/p_button"
            android:elevation="0dp"
            android:freezesText="false"
            android:paddingStart="20px"
            android:text="Digital Payments"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="20sp" />


    </RelativeLayout>
</LinearLayout>