<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@android:color/white"
    android:orientation="vertical"
    tools:context="com.example.admin.smartpos.activity_login">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/p_buttongradiant"
        android:textSize="20dp"
        android:padding="10dp"
        android:text="Transaction Summary"/>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="20dp"
        android:text="Card Payment"/>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        tools:context="com.example.admin.pointofsale.activity_main">

        <ImageView
            android:id="@+id/imageViewCard"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_icons8_card_payment_96" />

        <TextView
            android:id="@+id/textview_SuCardPayment"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="90dp"
            android:background="@drawable/p_button"
            android:elevation="0dp"
            android:freezesText="false"
            android:paddingTop="15dp"
            android:paddingEnd="20px"
            android:text="0.00"
            android:textAlignment="textEnd"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="20sp" />


    </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="20dp"
        android:text="Digital Payment"/>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        tools:context="com.example.admin.pointofsale.activity_main">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_icons8_qr_code_96" />

        <TextView
            android:id="@+id/textview_SuDigitlPayment"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="90dp"
            android:background="@drawable/p_button"
            android:elevation="0dp"
            android:freezesText="false"
            android:paddingTop="15dp"
            android:paddingEnd="20px"
            android:text="0.00"
            android:textAlignment="textEnd"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="20sp" />


    </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="20dp"
        android:text="Bill Payment"/>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        tools:context="com.example.admin.pointofsale.activity_main">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_icons8_sewer_96" />

        <TextView
            android:id="@+id/textview_SuBill"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="90dp"
            android:background="@drawable/p_button"
            android:elevation="0dp"
            android:freezesText="false"
            android:paddingTop="15dp"
            android:paddingEnd="20px"
            android:text="0.00"
            android:textAlignment="textEnd"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="20sp" />


    </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="20dp"
        android:text="Commission of Bill Payment"/>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        tools:context="com.example.admin.pointofsale.activity_main">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_icons8_sales_performance_96" />

        <TextView
            android:id="@+id/textview_SuCommission"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="90dp"
            android:background="@drawable/p_button"
            android:elevation="0dp"
            android:freezesText="false"
            android:paddingTop="15dp"
            android:paddingEnd="20px"
            android:text="0.00"
            android:textAlignment="textEnd"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="20sp" />


    </RelativeLayout>
</LinearLayout>